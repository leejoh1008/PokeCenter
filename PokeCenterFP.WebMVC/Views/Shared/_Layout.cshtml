<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PokeCenter</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="~/Content/LOGO.PNG" alt="" width="50" height="50">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Notifications","Message")">Notifications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CardIndex","PCard")">Listed Cards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("GameIndex","PGame")">Listed Games</a>
                        </li>

                    }
                        @Html.Partial("_LoginPartial")
                    
                </ul>
                
            </div>
        </div>
    </nav>



@model IEnumerable<PokeCenter.Models.PCardListItem>

@{
    ViewBag.Title = "CardIndex";
}

<h2>CardIndex</h2>

<p>
    @Html.ActionLink("Create New", "CreatePC")
</p>
<p>
    @Html.ActionLink("Edit a listing", "PCardEdit")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PCardId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardGrade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHolo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileContent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PCardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHolo)
            </td>
            <td>
                @if (item.FileContent != null)
                {
                    var base64 = Convert.ToBase64String(item.FileContent); var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <img src=@imgSrc , class="Postimg" , alt="Pokemon" />
                }
                else
                {
                    <img src="" class="img-fluid" alt="Pokemon" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPC", new {  id=item.PCardId }) |
                @Html.ActionLink("Delete", "DeletePC", new {  id=item.PCardId })
            </td>
        </tr>
    }

</table>
<style>
    .Postimg {
        width: 100px;
        height: 150px;
    }
</style>
